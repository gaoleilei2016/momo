<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_marginTop="10dp"
        android:layout_height="100dip">

        <ImageView
            android:id="@+id/left_topnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/no1" />

        <View
            android:id="@+id/left_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/left_topnum"
            android:background="@color/black" />

        <com.gdswww.library.view.CircleImageView
            android:id="@+id/img_search_anchor_avatar"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/left_line"
            android:src="@mipmap/zhubo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:layout_toLeftOf="@+id/tv_whether_concern"
            android:layout_toRightOf="@+id/img_search_anchor_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_search_anchor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直播君"
                android:textColor="@color/colorText"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_search_anchor_autograph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dip"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="个性签名男男女女"
                android:textColor="@color/colorGray666666"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_search_anchor_whether_concern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dip"
            android:drawableTop="@mipmap/yiguanzhu"
            android:text="已关注"
            android:textColor="@color/colorGray666666"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>